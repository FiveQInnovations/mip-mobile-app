---
interface Props {
  html: string;
}

const { html } = Astro.props;
---

<div class="prose prose-sm max-w-none px-4 py-6" data-testid="content-view">
  <div set:html={html} />
</div>

<style>
  .prose {
    color: #374151;
    line-height: 1.75;
  }
  
  .prose :global(p) {
    margin-top: 1em;
    margin-bottom: 1em;
  }
  
  .prose :global(h1),
  .prose :global(h2),
  .prose :global(h3) {
    font-weight: 700;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
  }
  
  .prose :global(h1) {
    font-size: 1.5em;
  }
  
  .prose :global(h2) {
    font-size: 1.25em;
  }
  
  .prose :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1em 0;
  }
  
  .prose :global(a) {
    color: #2563eb;
    text-decoration: underline;
  }
  
  .prose :global(ul),
  .prose :global(ol) {
    padding-left: 1.5em;
    margin: 1em 0;
  }
  
  .prose :global(li) {
    margin: 0.5em 0;
  }
</style>
